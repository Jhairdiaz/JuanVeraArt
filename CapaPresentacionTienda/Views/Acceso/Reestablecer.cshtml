
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Reestablecer</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body class="bg-black">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-2 font-glitch">Recuperar contraseña</h3></div>
                                <div class="card-body">
                                    <div class="font-roboto small mb-3 text-center text-muted">Ingrese su correo y le enviaremos su nueva contraseña</div>
                                    <form  action="@Url.Action("Reestablecer","Acceso")" method="post">
                                        <div class="form-floating mb-3">
                                            <input class="form-control text-dark font-glitch" name="correo" type="email" autocomplete="off" />
                                            <label class="text-dark font-glitch" for="inputEmail">Email</label>
                                        </div>
                                        @{
                                            if (ViewBag.Error != null)
                                            {
                                                <div class="form-floating mb-3">
                                                    <div class="alert alert-danger" role="alert">
                                                        @ViewBag.Error
                                                    </div>
                                                </div>
                                            }
                                        }


                                        <div class="d-flex align-items-center justify-content-center">                                            
                                            <button class="btn btn-outline-dark font-glitch" href="@Url.Action("Index","Acceso")" type="submit">RECUPERAR CONTRASEÑA</button>
                                        </div>
                                    </form>
                                </div>                                
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer>
                <div class="ImagenSolid">

                    <div class="text-center p-3 text-white">
                        © 2022 Copyright:

                    </div>
                    <!-- Copyright -->

                </div>
            </footer>
        </div>
    </div>
    
    <script src="~/Scripts/bootstrap.bundle.js"></script>
</body>
</html>
