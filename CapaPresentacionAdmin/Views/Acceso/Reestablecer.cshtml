
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Reestablecer</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body class="bg-black">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center fw-normal  my-4 font-glitch">RECUPERAR CONTRASEÑA</h3></div>
                                <div class="card-body">
                                    <div class="font-roboto small mb-3 text-center text-muted">INGRESE SU CORREO Y LE ENVIAREMOS SU NUEVA CONTRASEÑA</div>
                                    
                                    <form action="@Url.Action("Reestablecer","Acceso")" method="post">
                                        <div class="form-floating mb-3">
                                            <input class="form-control  text-dark font-glitch" id="inputEmail" type="email" name="correo" autocomplete="off" />
                                            <label class="text-dark font-glitch" for="inputEmail">Email</label>
                                        </div>
                                        @{
                                            if (ViewBag.Error != null)
                                            {
                                                <div class="form-floating mb-3">
                                                    <div class="alert alert-danger" role="alert">
                                                        @ViewBag.Error
                                                    </div>
                                                </div>
                                            }
                                        }

                                        @*<div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <a class="small" href="@Url.Action("Index","Acceso")">Regresar al login</a>
                                            <button class="btn btn-primary" type="submit">Reestablecer Contraseña</button>
                                        </div>*@

                                        <div class="d-flex align-items-center justify-content-center my-3 mt-4 ">
                                            <button class="btn btn-outline-dark font-glitch" type="submit">RECUPERAR CONTRASEÑA</button>
                                        </div>
                                    </form>
                                </div>                               
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer>
                <div class="ImagenSolid">

                    <div class="text-center p-3 text-white">
                        © 2022 Copyright:

                    </div>
                    <!-- Copyright -->

                </div>
            </footer>
        </div>
    </div>
    <script src="~/Scripts/bootstrap.bundle.js"></script>
</body>
</html>
