
@model CapaEntidad.Cliente
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrar</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body class="bg-black">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4 font-glitch">CREAR CUENTA</h3></div>
                                <div class="card-body">
                                    <form action="@Url.Action("Registrar","Acceso")" method="post">
                                        <div class="row mb-3">
                                            <div class="col-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    @Html.TextBoxFor(m => m.Nombres, new { @class = "form-control text-dark font-glitch", @id = "txtnombre", @autocomplete = "off", value = ViewData["Nombres"] })
                                                    <label class="text-dark font-glitch" for="txtnombre">Nombre</label>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="form-floating">
                                                    @Html.TextBoxFor(m => m.Apellidos, new { @class = "form-control text-dark font-glitch", @id = "txtapellidos", @autocomplete = "off", value = ViewData["Apellidos"] })
                                                    <label class="text-dark font-glitch" for="txtapellidos">Apellido</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-floating mb-3">
                                            @Html.TextBoxFor(m => m.Correo, new { @class = "form-control text-dark font-glitch", @id = "txtcorreo", @autocomplete = "off", value = ViewData["Correo"] })
                                            <label class="text-dark font-glitch" for="txtcorreo">Correo</label>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    @Html.PasswordFor(m => m.Clave, new { @class = "form-control text-dark font-glitch", @id = "txtclave", @autocomplete = "off" })
                                                    <label class="text-dark font-glitch" for="txtclave">Contraseña</label>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="form-floating mb-3 mb-md-0 font-glitch text-black">
                                                    @Html.PasswordFor(m => m.ConfirmarClave, new { @class = "form-control text-dark font-glitch", @id = "txtconfirmaclave", @autocomplete = "off" })
                                                    <label class="text-dark font-glitch" for="txtconfirmaclave">Confirmar Contraseña</label>
                                                </div>
                                            </div>
                                        </div>
                                        @{
                                            if (ViewBag.Error != null)
                                            {
                                                <div class="row mb-3">
                                                    <div class="alert alert-danger" role="alert">
                                                        @ViewBag.Error
                                                    </div>
                                                </div>
                                            }
                                        }

                                        <div class="mt-4 mb-0">
                                            <div class="d-grid"><button class="btn btn-outline-dark font-glitch" type="submit">CREAR CUENTA</button></div>
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center py-3">
                                    @*<div class="small"><a href="@Url.Action("Index","Acceso")">¿Ya tienes una cuenta? Iniciar Sesión</a></div>*@
                                    <ul class="conten-login p-0">
                                        <li class="signin-active"><a href="@Url.Action("Index","Acceso")" class="btn">¿Ya tienes una cuenta? Iniciar Sesión</a></li>                                        
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer>
                <div class="ImagenSolid">

                    <div class="text-center p-3 text-white">
                        © 2022 Copyright:

                    </div>
                    <!-- Copyright -->

                </div>
            </footer>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/Scripts/bootstrap.bundle.js"></script>
</body>
</html>
